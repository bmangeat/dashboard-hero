{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "semi": [1, "always"],
    "quotes": [1, "single"],
    "no-trailing-spaces": [1, { "ignoreComments": true }],
    "camelcase": [1, { "properties": "always", "ignoreImports": true }],
    "no-const-assign": 1,
    "no-unused-vars": [1, { "varsIgnorePattern": "h" }],
    "no-console": [1, { "allow": ["warn", "error"] }],
    "no-extra-semi": 2,
    "no-empty": 2,
    "no-empty-function": 2,
    "no-multiple-empty-lines": 2,
    "no-multi-spaces": 2,
    "no-duplicate-case": 2,
    "no-duplicate-imports": 2,
    "eqeqeq": 2
  },
  "extends": [
    "eslint:recommended"
  ]
}
